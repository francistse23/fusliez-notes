{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
      "utils": ["utils"], 
      "assets": ["assets"], 
      "components": ["components"], 
      "context": ["context"], 
    }
  },
  "exclude": [".cache", "android", "build", "dist"]
}
